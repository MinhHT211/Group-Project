<div class="loading-container">
  <div class="alert alert-warning" role="alert">
    <strong><%= message %></strong><br>
    Redirecting. Please wait a few minutes...
  </div>

  <div class="spinner">
    <div class="dot1"></div>
    <div class="dot2"></div>
    <div class="dot3"></div>
  </div>
</div>

<script>
  setTimeout(() => {
    window.location.href = "<%= redirectUrl %>";
  }, 3000);
</script>

<style>
  body {
    background: linear-gradient(135deg, #4a90e2, #0072ff);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    font-family: 'Poppins', sans-serif;
  }

  .loading-container {
    text-align: center;
    background: white;
    padding: 30px 40px;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }

  .spinner {
    margin-top: 20px;
  }

  .dot1, .dot2, .dot3 {
    width: 14px;
    height: 14px;
    background-color: #2b59ff;
    border-radius: 100%;
    display: inline-block;
    animation: bounce 2.1s infinite ease-in-out both;
  }

  .dot2 {
    animation-delay: -0.7s;
  }

  .dot1 {
    animation-delay: -1.4s;
  }

  @keyframes bounce {
    0%, 80%, 100% { transform: scale(0); } 
    40% { transform: scale(1.0); }
  }
</style>
