<div class="assistant-student-page" id="student-edit-page">
  <div class="page-title">Student Edition</div>

  <div class="student-index-container">
    <form id="edit-student-form" autocomplete="off" novalidate>
      <input type="hidden" id="current-department-id" value="<%= typeof departmentId !== 'undefined' ? departmentId : '' %>">
      <h3>Account Information</h3>

      <div>
        <label for="first_name">First name</label>
        <input id="first_name" name="first_name" required minlength="1" maxlength="50" />
      </div>

      <div>
        <label for="last_name">Last name</label>
        <input id="last_name" name="last_name" required minlength="1" maxlength="50" />
      </div>

      <div>
        <label for="email">Email</label>
        <input id="email" name="email" type="email"
               placeholder="student@usth.edu.vn" required maxlength="120"
               pattern="^[A-Za-z0-9._%+\-]+@[A-Za-z0-9.\-]+\.edu\.vn$" />
      </div>

      <div>
        <label for="phone">Phone</label>
        <input id="phone" name="phone" type="tel" maxlength="15"
               pattern="^(?:\+84|0)\d{9,10}$" />
      </div>

      <div>
        <label for="date_of_birth">Date of birth</label>
        <input id="date_of_birth" name="date_of_birth" type="date" max="2100-12-31" />
      </div>

      <div>
        <label for="gender">Gender</label>
        <select id="gender" name="gender" required>
          <option value="" disabled selected>-- Select --</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>

      <h3>Student Information</h3>

      <div>
        <label for="student_code">Student code</label>
        <input id="student_code" name="student_code" required minlength="6" maxlength="20" />
      </div>

      <div>
        <label for="major_name">Major name</label>
        <select id="major_name" name="major_name" required>
          <option value="">-- Select major --</option>
        </select>
      </div>

      <div>
        <label for="Duration_year">Duration_year</label>
        <input id="Duration_year" name="Duration_year" readonly />
      </div>

      <div>
        <label for="degree_type">Degree type</label>
        <input id="degree_type" name="degree_type" placeholder="Bachelor" disabled />
      </div>

      <div>
        <label for="admission_year">Admission year</label>
        <input id="admission_year" name="admission_year" type="number" min="2000" max="2100" step="1" required />
      </div>

      <div>
        <label for="expected_graduation_year">Expected graduation year</label>
        <input id="expected_graduation_year" name="expected_graduation_year" type="number" min="2000" max="2100" step="1" />
      </div>
      <div>
      <label for="student_status">Status</label>
      <select id="student_status" name="student_status" required>
      </select>
    </div>

      <div class="form-actions">
        <button type="submit" class="create-new-btn">Save Change</button>
        <a class="link-back" href="/assistant/student">Return to student list</a>
      </div>
    </form>
  </div>
</div>
