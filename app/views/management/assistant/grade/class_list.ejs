<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="page-title">Quản lý điểm theo lớp</h2>
      <p class="text-muted">Chọn lớp học để nhập và quản lý điểm sinh viên</p>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 class-list-table">
              <thead class="table-light">
                <tr>
                  <th class="col-no">STT</th>
                  <th class="col-class-name">Lớp học</th>
                  <th class="col-code">Mã lớp</th>
                  <th class="col-action">Hành động</th>
                </tr>
              </thead>

              <tbody>
                <% if (classes && classes.length > 0) { %>
                  <% classes.forEach((c, idx) => { %>
                    <tr>
                      <td class="text-center"><%= idx + 1 %></td>

                      <td class="class-info">
                        <div class="class-name"><%= c.class_name %></div>
                        <% if (c.course && c.course.course_name) { %>
                          <div class="course-name text-muted">
                            <%= c.course.course_name %>
                          </div>
                        <% } %>
                      </td>

                      <td class="text-center">
                        <span class="badge bg-secondary class-code-badge">
                          <%= c.class_code || "-" %>
                        </span>
                      </td>

                      <td class="text-center">
                        <a href="/assistant/grade/<%= c.class_id %>"
                           class="btn btn-primary btn-sm btn-grade">
                          <i class="bi bi-pencil-square me-1"></i>
                          Nhập điểm
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center py-5 text-muted">
                      <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                      Không có lớp học nào
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>